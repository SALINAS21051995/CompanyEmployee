    <%= form.label :Número_Interior %><br>
    <%= form.number_field :branch_int ,{:class => 'form-control'}%>
    </p>

    <p>
    <%= form.label :Número_Externo %><br>
    <%= form.number_field :branch_ext ,{:class => 'form-control', required: true}%>
    </p>

    <p>
    <%= form.label :Código_Postal %><br>
    <%= form.number_field :branch_code ,{:class => 'form-control', required: true}%>
