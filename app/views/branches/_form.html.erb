<%= form_with scope: :branch, url: branches_path, local: true do |form| %>
    <% if @branch.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@branch.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @branch.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
