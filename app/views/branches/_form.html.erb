<%= form_with scope: :branch, url: branches_path, local: true do |form| %>
    <p>
    <%= form.label :Nombre %><br>
    <%= form.text_field :branch_name ,{:class => 'form-control', required: true }%>
    </p>

    <p>
    <%= form.label :Calle %><br>
    <%= form.text_field :branch_street, {:class => 'form-control', required: true} %>
    </p>
    
    <p>
    <%= form.label :Colonia %><br>
    <%= form.text_field :branch_col, {:class => 'form-control', required: true} %>
    </p>

    <p>
    <%= form.label :Número_Interior %><br>
    <%= form.text_field :branch_int ,{:class => 'form-control', required: true}%>
    </p>

    <p>
    <%= form.label :Número_Externo %><br>
    <%= form.text_field :branch_ext ,{:class => 'form-control', required: true}%>
    </p>

    <p>
    <%= form.label :Código_Postal %><br>
    <%= form.text_field :branch_code ,{:class => 'form-control', required: true}%>
    </p>

    <p>
    <%= form.label :Ciudad %><br>
    <%= form.text_field :branch_city ,{:class => 'form-control', required: true}%>
    </p>

    <p>
    <%= form.label :País %><br>
    <%= form.text_field :branch_country ,{:class => 'form-control', required: true}%>
    </p>

    <p style="float: right;">
    <%= form.submit 'Guardar Sucursal' %>
    </p>
<% end %>
<%= link_to 'Anterior', branches_path %>